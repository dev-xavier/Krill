<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--Button-->

    <style name="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>


    <!--Text-->

    <style name="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="TextDirections">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>


    <!--Image-->

    <style name="ImageBase">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="ImageNormal" parent="ImageBase">
        <item name="android:src">@drawable/ic_launcher_background</item>
    </style>

    <style name="ImageBaseSecondary" parent="ImageBase">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageNormalSecondary" parent="ImageBaseSecondary">
        <item name="android:src">@drawable/ic_launcher_background</item>
    </style>

</resources>